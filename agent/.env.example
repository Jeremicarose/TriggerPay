# TriggerPay Agent Configuration
# Copy this to .env and fill in values

# NEAR network
NEAR_NETWORK_ID=testnet
NEAR_NODE_URL=https://rpc.testnet.near.org

# Contract
CONTRACT_ID=triggerpay.testnet

# Agent NEAR account (needs full-access key to call submit_attestation)
AGENT_ACCOUNT_ID=triggerpay-agent.testnet
AGENT_PRIVATE_KEY=ed25519:YOUR_PRIVATE_KEY_HERE

# Flight API (your deployed frontend URL, or localhost for dev)
FLIGHT_API_URL=http://localhost:3000

# Polling interval in milliseconds (default: 15 minutes for production, 15s for demo)
POLL_INTERVAL_MS=15000

# Log level: debug | info | warn | error
LOG_LEVEL=info
